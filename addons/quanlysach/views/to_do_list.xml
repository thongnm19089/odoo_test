<odoo>

  <record model="ir.ui.view" id="quanlysach_list">
    <field name="name">db_sach.tree</field>
    <field name="model">db_sach</field>
    <field name="arch" type="xml">
      <tree string="view list inf_db">
        <field name="tac_gia" />
        <field name="ten_sach" />
        <field name="the_loai" />
        <field name="ngay_xuat_ban" />
        <field name="mo_ta" />
      </tree>
    </field>
  </record>

  <record model="ir.ui.view" id="quanlysach_form">
    <field name="name">db_sach.form</field>
    <field name="model">db_sach</field>
    <field name="arch" type="xml">
      <form string="form_create_item_db">
        <sheet>
          <field name="img" widget="image" class="oe_avatar" />
          <div class="oe_title">
            <h1 style="color :red"> Quản lý Sách !!!!! </h1>

          </div>
          <div class="custom-background">
            <group>
              <h2> Sách được sáng tác bới: <field name="tac_gia" /></h2>
            </group>
            <group>
              <group>
                <field name="ten_sach" />
                <field name="ngay_xuat_ban" />
              </group>
              <group>
                <field name="the_loai" />
                <field name="mo_ta" />
              </group>
            </group>
          </div>
        </sheet>
      </form>
    </field>
  </record>

  <record id="education_student_view_search" model="ir.ui.view">
    <field name="model">db_sach</field>
    <field name="arch" type="xml">
       <search>
          <field name="tac_gia" />
  
       </search>
    </field>
 </record>

  <record id="action_teamplate" model="ir.actions.act_window">
    <field name="name">db_sach</field>
    <field name="res_model">db_sach</field>
  </record>
  <menuitem id="menu_item_1" name="Sach Manager" action="action_teamplate" />


</odoo>